      </nav>

      <!-- Main Content Area -->
      <div class="container-fluid pr-0 pl-0 py-5">
        <div class="px-5 py-5">
          <div class="ml-5 mr-5 container-md mx-auto ">
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li class="breadcrumb-item">
                  <a href="/teacher-dashboard">All Classrooms</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                  Class - <%= classRoom.title; %>
                </li>
              </ol>
            </nav>
            <div class="col-12">
              <h1>Class Single-Signon Code: <%= classRoom.classCode; %></h1>
              <p>
                <%= classRoom.title%> <%= classRoom.yearLevel %> <%= classRoom.subject; %>
              </p>
              <!-- Calendar -->
