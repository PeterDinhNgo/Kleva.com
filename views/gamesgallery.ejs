<!-- Head -->
<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="../css/bootstrap.min.css" />
  <link rel="stylesheet" href="../css/kleva-main-theme.css" />
  <title>Kleva Games</title>
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
    integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
    crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
    integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
    crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
    crossorigin="anonymous"></script>
</head>

<body>
  <!-- 
Main Navbar
- Users who haven't signed in
-->

  <nav class="navbar navbar-expand-lg navbar-light bg-custom py-3 mb-3 shadow-sm">
    <!-- Kleva Logo -->
    <a href="/home"><img src="../img/logo.png" alt="Kleva" class="logo navbar-brand" /></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ml-auto ml-2 mt-2 mr-3">

        <% if (user === 'teacher') { %>
        <li class="nav-item active">
          <a class="nav-link" href="/teacher-dashboard">Dashboard<span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item active">
          <form method="POST" action="/sign-out"><button class="nav-link button" type="submit"
              style="color: inherit;">Log Out<span class="sr-only">(current)</span></button></form>
        </li>
        <% } else if(user === 'student') { %>
        <li class="nav-item active">
          <a class="nav-link" href="/student-dashboard">Dashboard<span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item active">
          <form method="POST" action="/sign-out"><button class="nav-link button" type="submit"
              style="color: inherit;">Log Out<span class="sr-only">(current)</span></button></form>
        </li>
        <% } else if(user === 'creator'){ %>
        <li class="nav-item active">
          <a class="nav-link" href="/creator-dashboard">Dashboard<span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item active">
          <form method="POST" action="/sign-out"><button class="nav-link button" type="submit"
              style="color: inherit;">Log Out<span class="sr-only">(current)</span></button></form>
        </li>
        <% } else { %>
        <li class=" nav-item dropdown mr-3">
          <a class="klevabtn px-3 nav-link dropdown-toggle shadow-sm rounded" href="#" id="navbarDropdownMenuLink"
            role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Log In As
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
            <a class="dropdown-item" href="/teacher-signin">Teacher</a>
            <a class="dropdown-item" href="/student-signin">Student</a>
            <a class="dropdown-item" href="/creator-signin">Game Creator</a>
          </div>
        </li>
        <% } %>
        <li class="nav-item active">
          <a class="nav-link" href="../../../gamesgallery/?page=1">Games Gallery<span
              class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item active">
          <a class="nav-link" href="/about">About<span class="sr-only">(current)</span></a>
        </li>




      </ul>
    </div>
  </nav>

  <div class="wrapper">
    <div class="container">
      <!--Featured Button-->
      <div class="col-xs-1 my-2">
        <button type="button" class="btn btn-outline-secondary btn-lg mt-3 categoryBadge"
          style="border: none; background-color: #5f5360">
          Featured
        </button>
      </div>

      <!--Game Banner-->
      <div class="row justify-content-center rounded no-margin mb-5">
        <div class="col-lg-5 align-self-center">
          <a href="/gamesgallery/?page=1"><img
              src="https://storage.googleapis.com/kleva_assets/bridgeConFeatureSplash-min.png"
              class="img-fluid mx-auto d-block gameGallerySplash" alt="Bridge Constructor Splash" /></a>
        </div>
        <div class="col-lg-7">
          <h3 class="gameFeatureTitle">Bridge Constructor</h3>
          <p class="gamePageDescription">Build a bridge, get over it. Highly Educational</p>
          <div class="row">
            <div class="col">
              <img src="https://storage.googleapis.com/kleva_assets/bridgeConScreen1-min.png"
                class="img-fluid gameGallerySplash" alt="Bridge Constructor 1" />
            </div>
            <div class="col">
              <img src="https://storage.googleapis.com/kleva_assets/bridgeConScreen2-min.png"
                class="img-fluid gameGallerySplash" alt="Bridge Constructor 2" />
            </div>
            <div class="col">
              <img src="https://storage.googleapis.com/kleva_assets/bridgeConScreen3-min.png"
                class="img-fluid gameGallerySplash" alt="Bridge Constructor 3" />
            </div>
            <div class="col">
              <img src="https://storage.googleapis.com/kleva_assets/bridgeConScreen4-min.png"
                class="img-fluid gameGallerySplash" alt="Bridge Constructor 4" />
            </div>
          </div>
          <div class="row mt-5 justify-content-between align-items-center">
            <div class="col-6 order-1 text-left">
              <h5 class="h-100"><span class="badge subcategoryBadge">Science</span></h5>
              <h5 class="h-100"><span class="badge subcategoryBadge">Physical Sciences</span></h5>
            </div>
            <div class="col-6 order-2 text-right align-self-end">
              <h5 class="h-100"><span class="badge subcategoryCode">ACARA Code: HLG650</span></h5>

            </div>
          </div>
        </div>
      </div>


      <!--Trending Button-->
      <div class="col-xs-1 my-2">
        <button type="button" class="btn btn-outline-secondary btn-lg mb-2 categoryBadge"
          style="border: none; background-color: #5f5360">
          Categories
        </button>
      </div>

    </div>

    <!-- Page Content -->
    <div class="container">
      <!-- Category Badges -->
      <div class="row text-center mt-3 mb-5">
        <div class="col-lg-4 mb-5">
          <div class="card p-3 category card1">
            <a href="/gamesgallery/?page=1&gameCategory=English"><img
                src='https://storage.googleapis.com/kleva_assets/english.png' class="img-fluid img-fluid1" /></a>
            <div class="card-footer card-footer1">
              ENGLISH
            </div>
          </div>
        </div>
        <div class="col-lg-4 mb-5">
          <div class="card p-3 category card2">
            <a href="/gamesgallery/?page=1&gameCategory=Maths"><img
                src='https://storage.googleapis.com/kleva_assets/mathematics.png' class="img-fluid img-fluid1" /></a>
            <div class="card-footer card-footer2">
              MATHS</div>
          </div>
        </div>
        <div class="col-lg-4 mb-5">
          <div class="card p-3 category card3">
            <a href="/gamesgallery/?page=1&gameCategory=Technology"><img
                src='https://storage.googleapis.com/kleva_assets/technologies.png' class="img-fluid img-fluid1" /></a>
            <div class="card-footer card-footer3">
              TECH
            </div>
          </div>
        </div>
        <div class="col-lg-4 mb-5">
          <div class="card p-3 category card4">
            <a href="/gamesgallery/?page=1&gameCategory=Arts"><img
                src='https://storage.googleapis.com/kleva_assets/theArts.png' class="img-fluid img-fluid1" /></a>
            <div class="card-footer card-footer4">
              ARTS</div>
          </div>
        </div>
        <div class="col-lg-4 mb-5">
          <div class="card p-3 category card5">
            <a href="/gamesgallery/?page=1&gameCategory=Science"><img
                src='https://storage.googleapis.com/kleva_assets/science.png' class="img-fluid img-fluid1" /></a>
            <div class="card-footer card-footer5">
              SCIENCE</div>
          </div>
        </div>
        <div class="col-lg-4 mb-5">
          <div class="card p-3 category card6">
            <a href="/gamesgallery/?page=1&gameCategory=Humanities"><img
                src='https://storage.googleapis.com/kleva_assets/humanitiessocialSciences.png'
                class="img-fluid img-fluid1" /></a>
            <div class="card-footer card-footer6">
              HUMANITIES
            </div>
          </div>
        </div>
      </div>
      <!-- /.col-lg-3 -->

      <!--Trending Button-->
      <div class="col-xs-1 my-2">
        <button type="button" class="btn btn-outline-secondary btn-lg categoryBadge"
          style="border: none; background-color: #5f5360">
          Games
        </button>
      </div>

      <div class="row mt-4">
        <!-- Game Loader -->
        <% if (games.length > 0) { %> <% for (let game of games) { %>
        <div class="col-lg-4 col-md-6 mb-4">
          <div class="card rounded" style="outline: none; border: none; background-color: transparent;">
            <a href="/gamepage/<%= game.gameID %>"><img class="card-img-top card-img-top1"
                style=" outline: none; border-radius: 1.5rem; box-shadow: 0 0.3rem 0.3rem rgba(0, 0, 0, 0.3);"
                src="<%- game.gameImageURL %>" alt="" loading="lazy" /></a>

          </div>
          <div class="container-fluid my-auto">
            <h4 class="mt-3">
              <a href="/gamepage/<%= game.gameID %>" class="game-title"><%- game.title %></a>
            </h4>
            <div class="description">
              <p class="game-description"><%- game.description %></p>
            </div>
            <div>
              <small class=" badge badge-pill game-category"><%- game.category %></small>
            </div>
          </div>

        </div>
        <% } %> <% } %>
        <!-- /.row -->
      </div>

      <!-- Game Page Buttons -->
      <div class="row mt-3 justify-content-center">
        <% if (pageButtons => 1) { %>
        <nav aria-label="Game Results Pages" class="my-5" style="background-color: transparent;">
          <ul class="pagination">
            <% for(i=0; i < pageButtons; i++) { %>
            <li class="<%= pageNumber === i+1 ? 'page-item active' : 'page-item'; %>">
              <a class="page-link" href="/gamesgallery/?page=<%- i+1 %>"><%- i+1 %></a>
            </li>
            <% } %>
          </ul>
        </nav>
        <% } %>
      </div>

      <!-- /.container -->
    </div>
  </div>
</body>
<!-- Footer -->
<footer class="py-5 bg-custom mt-5 footer">
  <div class="container">
    <p class="text-center m-0">
      Copyright &copy; Kleva 2020
    </p>
  </div>
</footer>

</html>