<!-- Head -->
<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="../css/bootstrap.min.css" />
  <link rel="stylesheet" href="../css/kleva-main-theme.css" />
  <title>Kleva Games</title>
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
    integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
    crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
    integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
    crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
    crossorigin="anonymous"></script>
</head>

<body style="min-height: 100vh">
  <!-- 
Main Navbar
- Users who haven't signed in
-->

  <nav class="navbar navbar-expand-lg navbar-light bg-custom py-3 mb-3 shadow-sm"
    style="background-color: #FFF3FC; font-weight: 600;">
    <!-- Kleva Logo -->
    <a href="/home"><img src="../img/logo.png" alt="Kleva" class="logo navbar-brand" /></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ml-auto ml-2 mt-2 mr-3">

        <% if (user === 'teacher') { %>
        <li class="nav-item active">
          <a class="nav-link" href="/teacher-dashboard">Dashboard<span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item active">
          <form method="POST" action="/sign-out"><button class="nav-link" type="submit"
              style="outline: none; border: none; background-color: transparent; font-weight: 600; color: inherit;">Log
              Out<span class="sr-only">(current)</span></button></form>
        </li>
        <% } else if(user === 'student') { %>
        <li class="nav-item active">
          <a class="nav-link" href="/student-dashboard">Dashboard<span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item active">
          <form method="POST" action="/sign-out"><button class="nav-link" type="submit"
              style="outline: none; border: none; background-color: transparent; font-weight: 600; color: inherit;">Log
              Out<span class="sr-only">(current)</span></button></form>
        </li>
        <% } else if(user === 'creator'){ %>
        <li class="nav-item active">
          <a class="nav-link" href="/creator-dashboard">Dashboard<span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item active">
          <form method="POST" action="/sign-out"><button class="nav-link" type="submit"
              style="outline: none; border: none; background-color: transparent; font-weight: 600; color: inherit;">Log
              Out<span class="sr-only">(current)</span></button></form>
        </li>
        <% } else { %>
        <li class=" nav-item dropdown mr-3">
          <a class="klevabtn px-3 nav-link dropdown-toggle shadow-sm rounded" href="#" id="navbarDropdownMenuLink"
            role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Log In As
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink"
            style="background-color: #C9D5FF; border: none; font-weight: 600;">
            <a class="dropdown-item" href="/teacher-signin">Teacher</a>
            <a class="dropdown-item" href="/student-signin">Student</a>
            <a class="dropdown-item" href="/creator-signin">Game Creator</a>
          </div>
        </li>
        <% } %>
        <li class="nav-item active">
          <a class="nav-link" href="../../../gamesgallery/?page=1">Games Gallery<span
              class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item active">
          <a class="nav-link" href="/about">About<span class="sr-only">(current)</span></a>
        </li>



        <!-- Other Types of Navbar Elements
      <li class="nav-item">
        <a class="nav-link" href="#">Link</a>
      </li>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Dropdown
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <a class="dropdown-item" href="#">Action</a>
          <a class="dropdown-item" href="#">Another action</a>
          <div class="dropdown-divider"></div>
          <a class="dropdown-item" href="#">Something else here</a>
        </div>
      </li>
      <li class="nav-item">
        <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
      </li>  -->
      </ul>
    </div>
  </nav>

  <div class="wrapper">
    <div class="container">
      <!--Featured Button-->
      <div class="col-xs-1 my-2">
        <button type="button" class="btn btn-outline-secondary btn-sm">
          Featured
        </button>
      </div>

      <!--Game Banner-->
      <div class="row justify-content-center rounded bg-game">
        <div class="col-lg-5">
          <a href="/gamepage"><img src="https://storage.googleapis.com/kleva_assets/bridgeConFeatureSplash-min.png"
              class="img-fluid mx-auto d-block" alt="Bridge Constructor Splash" /></a>
        </div>
        <div class="col-lg-7">
          <h3>Bridge Constructor</h3>
          <p>Build a bridge, get over it. Highly Educational</p>
          <div class="row">
            <div class="col">
              <img src="https://storage.googleapis.com/kleva_assets/bridgeConScreen1-min.png" class="img-fluid"
                alt="Bridge Constructor 1" />
            </div>
            <div class="col">
              <img src="https://storage.googleapis.com/kleva_assets/bridgeConScreen2-min.png" class="img-fluid"
                alt="Bridge Constructor 2" />
            </div>
            <div class="col">
              <img src="https://storage.googleapis.com/kleva_assets/bridgeConScreen3-min.png" class="img-fluid"
                alt="Bridge Constructor 3" />
            </div>
            <div class="col">
              <img src="https://storage.googleapis.com/kleva_assets/bridgeConScreen4-min.png" class="img-fluid"
                alt="Bridge Constructor 4" />
            </div>
          </div>
          <div class="d-flex justify-content-between">
            <h4 class="h-100 align-self-end cost">A$ 14.99</h4>
            <div class="windows-logo h-100 align-self-end">
              <img src="../img/windowsPlatform.png" class="img-fluid" alt="Windows Platform" />
            </div>
          </div>
        </div>
      </div>

      <!--Game Slideshow Controls-->
      <div class="row justify-content-center">
        <button type="button" class="m-1 btn btn-dark btn-circle btn-sm"></button>
        <button type="button" class="m-1 btn btn-light btn-circle btn-sm"></button>
        <button type="button" class="m-1 btn btn-light btn-circle btn-sm"></button>
        <button type="button" class="m-1 btn btn-light btn-circle btn-sm"></button>
        <button type="button" class="m-1 btn btn-light btn-circle btn-sm"></button>
      </div>

      <!--Trending Button-->
      <div class="col-xs-1 my-2">
        <button type="button" class="btn btn-outline-secondary btn-sm">
          Trending
        </button>
      </div>
    </div>

    <!-- Page Content -->
    <div class="container">
      <!-- Category Badges -->
      <div class="row text-center">
        <div class="col-12 ">
          <div class="list-group list-group-horizontal mt-3">
            <a href="#" class="list-group-item flex-fill" style="width: 10rem;">English</a>
            <a href="#" class="list-group-item flex-fill" style="width: 10rem;">Maths</a>
            <a href="#" class="list-group-item flex-fill" style="width: 10rem;">Science</a>
            <a href="#" class="list-group-item flex-fill" style="width: 10rem;">Humanities</a>
          </div>
        </div>
        <div class="col-12">
          <div class="list-group list-group-horizontal mt-3">
            <a href="#" class="list-group-item flex-fill" style="width: 10rem;">Digital Technologies</a>
            <a href="#" class="list-group-item flex-fill" style="width: 10rem;">Arts</a>
            <a href="#" class="list-group-item flex-fill" style="width: 10rem;">Languages</a>
            <a href="#" class="list-group-item flex-fill" style="width: 10rem;">Health Education</a>
          </div>

        </div>
      </div>
      <!-- /.col-lg-3 -->

      <div class="row mt-5">
        <!-- Game Loader -->
        <% if (games.length > 0) { %> <% for (let game of games) { %>
        <div class="col-lg-4 col-md-6 mb-4">
          <div class="card rounded shadow">
            <a href="/gamepage/<%= game.gameID %>"><img class="card-img-top"
                style="width: 100%; height: 300px; object-fit: cover;" src="<%- game.gameImageURL %>" alt=""
                loading="lazy" /></a>

          </div>
          <div class="container-fluid my-auto">
            <h4 class="mt-3">
              <a href="#" style="color: #5F5360;"><%- game.title %></a>
            </h4>
            <div style="height: 5rem; overflow: hidden; ">
              <p style=" color: #7E6E80;"><%- game.description %></p>
            </div>
            <div>
              <small class=" badge badge-pill" style="background-color: #fcddffff; "><%- game.category %></small>
            </div>
          </div>

        </div>
        <% } %> <% } %>
        <!-- /.row -->
      </div>

      <!-- Game Page Buttons -->
      <div class="row mt-3 justify-content-center">
        <% if (pageButtons => 1) { %>
        <nav aria-label="Game Results Pages">
          <ul class="pagination">
            <% for(i=0; i < pageButtons; i++) { %>
            <li class="<%= pageNumber === i+1 ? 'page-item active' : 'page-item'; %>">
              <a class="page-link" href="/gamesgallery/?page=<%- i+1 %>"><%- i+1 %></a>
            </li>
            <% } %>
          </ul>
        </nav>
        <% } %>
      </div>

      <!-- /.container -->
    </div>
  </div>
</body>
<!-- Footer -->
<footer class="py-5 bg-dark">
  <div class="container">
    <p class="text-center text-white m-0">
      Copyright &copy; Your Website 2020
    </p>
    <!-- /.container -->
  </div>
</footer>

</html>