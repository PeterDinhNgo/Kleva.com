<div class="modal " tabindex="-1" id="exampleModal" style="background-color: rgba(0, 0, 0, 0.226);">
  <div class="modal-dialog modal-dialog-centered ">
    <div class="modal-content add_classroom_modal">
      <div class="modal-header ">
        <h5 class="modal-title">Add Classroom</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/add-classroom" method="POST" id="modalAddClassroom" class="add_classroom_modal px-3">
          <div class="form-group ">
            <label for="className" class="add_classroom_modal_label">Classroom Name</label>
            <input class="form-control add_classroom_modal_input" type="text" id="className" name="className"
              placeholder="Example: 9AM Monday Maths">
          </div>
          <div class="form-group">
            <label for="yearLevel" class="add_classroom_modal_label">Year Level</label>
            <select class="form-control add_classroom_modal_input" id="yearLevel" name="yearLevel" required>
              <option selected>Year Level</option>
              <option value="7">7</option>
              <option value="8">8</option>
              <option value="9">9</option>
            </select>
          </div>
          <div class="form-group">
            <label for="subject" class="add_classroom_modal_label">ACARA Subjects</label>
            <select class="form-control add_classroom_modal_input" id="subject" name="subject" required>
              <option selected>ACARA Subjects</option>
              <option value="english">English</option>
              <option value="mathematics">Mathematics</option>
              <option value="science">Science</option>
              <option value="history" disabled>History</option>
              <option value="geography" disabled>Geography</option>
              <option value="economicsBusiness" disabled>Economics and Business</option>
              <option value="digitalTechnologies" disabled>Digital Technologies</option>
            </select>
          </div>
          <div class="col-12 text-center">
            <button type="submit" class="btn add_classroom_modal_button align-self-center my-5">Add Classroom</button>
          </div>
      </div>

      </form>
    </div>
  </div>
</div>

